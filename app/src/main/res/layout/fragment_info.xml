<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/anxietyInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/anxietyInfoButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/baseline_info_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />

        <Button
            android:id="@+id/depressionInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/depressionInfoButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/baseline_info_24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />

        <Button
            android:id="@+id/suicideInfoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/suicideInfoButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/baseline_info_24" />

    </LinearLayout>
</ScrollView>

