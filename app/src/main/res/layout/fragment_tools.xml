<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsFragment"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mindfullnessToolsButton"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="@string/mindfullnessToolsButton"
        android:textColor="@android:color/black"
        android:textSize="@dimen/useful_info_button_text_size"
        android:textStyle="bold"
            app:icon="@drawable/ic_psychology"
            app:iconGravity="start"
            app:iconTint="@android:color/black"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="0sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/relaxationToolsButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="@string/relaxationToolsButton"
            android:textColor="@android:color/black"
            android:textSize="@dimen/useful_info_button_text_size"
            android:textStyle="bold"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="0sp"
            app:icon="@drawable/ic_self_improvement"
            app:iconGravity="start"
            app:iconTint="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/problemSolvingToolsButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="@string/problemSolvingToolsButton"
            android:textColor="@android:color/black"
            android:textSize="@dimen/useful_info_button_text_size"
            android:textStyle="bold"
            app:icon="@drawable/ic_think_bulb"
            app:iconGravity="start"
            app:iconTint="@android:color/black"
            app:backgroundTint="@android:color/white"
            app:cornerRadius="0sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>