<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/mindfullnessToolsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mindfullnessToolsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/ic_psychology" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />

        <Button
            android:id="@+id/relaxationToolsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relaxationToolsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/ic_self_improvement" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?attr/dividerHorizontal" />

        <Button
            android:id="@+id/problemSolvingToolsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/problemSolvingToolsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:textSize="20sp"
            app:icon="@drawable/ic_think_bulb" />

    </LinearLayout>
</ScrollView>