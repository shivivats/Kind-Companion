<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shivivats.kindcompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.shivivats.kindcompanion.ReminderNoteList"></activity>
        <!-- Main Home Activity. Its the front page of the app for now -->
        <activity android:name="com.shivivats.kindcompanion.FrontPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- The note taking activity -->
        <activity
            android:name="com.shivivats.kindcompanion.NoteActivity"
            android:parentActivityName="com.shivivats.kindcompanion.FrontPageActivity"></activity>
    </application>

</manifest>