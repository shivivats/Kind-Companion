<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shivivats.kindcompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".ReminderNoteEntryActivity"
            android:parentActivityName=".NoteReminderList"/>

        <activity android:name=".NoteReminderList" />

        <activity android:name=".FrontPageActivity"> <!-- Main Home Activity. Its the front page of the app for now -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NoteActivity"
            android:parentActivityName=".FrontPageActivity" />

    </application>

</manifest>